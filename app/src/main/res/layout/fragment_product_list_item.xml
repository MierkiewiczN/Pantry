<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="0dp"
    app:cardCornerRadius="0dp"
    android:layout_marginBottom="4dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_title_color"
            android:textSize="@dimen/cardview_title_size"
            android:layout_margin="@dimen/cardview_title_margin"
            android:text="Product name"/>

        <TextView
            android:id="@+id/product_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cardview_details_color"
            android:textSize="@dimen/cardview_details_size"
            android:layout_marginTop="@dimen/cardiew_details_margin_top"
            android:layout_marginBottom="@dimen/cardview_details_margin_bottom"
            android:layout_marginHorizontal="@dimen/cardview_details_margin_horizontal"
            android:text="123"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/cardview_space"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>